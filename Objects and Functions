    let calculateType = (arg) => console.log(typeof arg);
    
    //     7

    function primeNum(num) {

        if (num === 2 || num === 3) {
            return true;
        } else if (num < 2) {
            return false;
        } else {
            if ( num % 2 === 0 || num % 3 === 0) {
                return false;
            }
        } return true;
      }

    



    




