    //     5

    function showName(name, arr) {

        if (arr.find(e => e == name)) {
            console.log(`Hello ${name}!`)
        } else {
            console.log ("There is no such name!")
        };
    };

    let terminalNames = ["Ven", "Roman", "Elena"]; // saved names in the payment terminal


    showName("Roman", terminalNames) // Hello Ven!
    showName("Max", terminalNames) // There is no such name!

